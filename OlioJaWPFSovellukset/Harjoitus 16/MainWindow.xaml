<Window x:Class="Harjoitus_16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harjoitus_16"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbInputField" HorizontalAlignment="Center" Margin="0,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="62" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="btnKmToMiles" Content="Convert to Miles" HorizontalAlignment="Left" Margin="60,120,0,0" VerticalAlignment="Top" Height="42" Width="137" Click="btnKmToMiles_Click"/>
        <Button x:Name="btnMilesToKm" Content="Convert to Kilometers" HorizontalAlignment="Left" Margin="596,120,0,0" VerticalAlignment="Top" Height="42" Width="156" Click="btnMilesToKm_Click"/>
        <TextBlock x:Name="tbCoversionResult" HorizontalAlignment="Center" Margin="0,288,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FlowDirection="LeftToRight" Height="54"/>

    </Grid>
</Window>